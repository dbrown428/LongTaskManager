{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "allowJs": true,
        "strictNullChecks": true,
        "alwaysStrict": true,
        "rootDirs": [
            "src/",
            "tests/"
        ],
        "outDir": "build/"
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ]
}
